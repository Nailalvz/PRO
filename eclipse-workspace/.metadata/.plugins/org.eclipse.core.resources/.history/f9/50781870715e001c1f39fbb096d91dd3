	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		String opcion;
		boolean salir = false;
		
		while(!salir) {
			System.out.println("Bienvenido al menú principal.\nSeleccione una de las siguientes opciones:\n");
			System.out.println("Introduzca 1 para crear un vector con valores aleatorios y buscar un elemento dentro del vector creado.");
			System.out.println("Introduzca 2 para crear una matriz y comprobar si un elemento de dicha matriz es punto silla.");
			System.out.println("Introduzca 3 para introducir el nombre propio de una persona e imprimirlo en otro formato.");
			System.out.println("Introduzca 0 para salir.\n Introduzca su opción:");
			
			opcion = scan.next();
			
			switch(opcion) {
			
			case "1":
				System.out.println("Ha seleccionado la opción 1: ");
				System.out.println("Devolverá la posición en la que se encuentra el elemento que desea buscar, si no lo encuentrá devolverá -1.");
				int longitud = 0;
				int num = 0;
				boolean exit = false;
				char aux;
				
					
				
				do {
					System.out.println("Introduzca la longitud del vector: ");
					longitud = scan.nextInt();
					if(longitud < 0) {
						System.out.println("La longitud del vector debe ser positiva.");
					}
					
				}while(longitud < 0);
					
			
				int vector[] = new int [longitud];
				
				do {
					
					do {
						System.out.println("Introduzca el número que desea buscar (Rango del 0 al 100): ");
						num = scan.nextInt();
						if(num < 0|| num > 100) {
							System.out.println("El número debe estar comprendido entre 0 y 100");
						}
					}while(num < 0 || num > 100);
					
					for(int i = 0; i < vector.length; i++) {
						vector[i] = aleatorio(100);
						System.out.print("[" + vector[i] + "]");
					}System.out.println();
					
					System.out.println("El número " + num + " se encuentra en la posición " + buscarNumeros(num, vector));
					
					do {
						
					
						System.out.println("¿Quiere buscar otro elemento?\nIntroduzca una 'y' para continuar y una 'n' para salir.");
						aux =  scan.next().charAt(0);
						
						if(aux == 'n') {
							exit = true;
						}else if(aux == 'y') {
							
						}else {
							System.out.println("Introduzca una opción válida.");
							aux = 'b';
						}
					}while(aux == 'b');
				
				}while(exit == false);

				
				break;
				
			case "2":
				System.out.println("Ha seleccionado la opción 2: ");
				
				boolean exit2 = false;
				char aux2 = 'b';
				int dimension = 1;
				
				int fila = 0;
				int columna = 0;
				
				do {
					System.out.println("Introduce la dimensión de la matriz");
					dimension = scan.nextInt();
					
					if(dimension <= 0) {
						System.out.println("La dimensión de la matriz no puede ser cero o menor que cero.");
					}
					
				}while(dimension <= 0);
				
				int matriz[][] = new int [dimension][dimension];
				
				for(int i = 0; i < matriz.length; i++) {
					for(int j = 0; j < matriz.length; j++) {
						matriz[i][j] = aleatorio(100);
						System.out.print("[" + matriz[i][j] + "]");
					}System.out.println();
				}
				
				do {
					
					do {
						System.out.println("Introduzca la fila: ");
						fila = scan.nextInt();
						if(fila < 0 || fila >= dimension) {
							System.out.println("La fila no puede ser menor que cero o mayor que la dimensión de la matriz (Recordamos que las matrices comienzan en la posición 0).");
						}
					}while(fila < 0 || fila >= dimension);
					
					do {
						System.out.println("Introduzca la columna");
						columna = scan.nextInt();
						if(columna < 0 || columna >= dimension) {
							System.out.println("La columna no puede ser menor que cero o mayor que la dimensión de la matriz (Recordamos que las matrices comienzan en la posición 0).");
						}
					}while(columna < 0 || columna >= dimension);
					
					imprimirFila(matriz[fila]);
					imprimirColumna(matriz, columna);
					
					System.out.println("Es el mayor de su fila: " + mayorFila(matriz, fila, columna));
					System.out.println("Es el menor de su columna: " + menorColumna(matriz, fila, columna));
					System.out.println(puntoSilla(mayorFila(matriz, fila, columna),menorColumna(matriz, fila, columna)));
					
					do {
						System.out.println("¿Quiere buscar otro elemento?\nIntroduzca una 'y' para continuar y una 'n' para salir.");
						aux2 =  scan.next().charAt(0);
						
						if(aux2 == 'n') {
							exit2 = true;
						}else if(aux2 == 'y') {
							
						}else {
							System.out.println("Introduzca una opción válida.");
							aux2 = 'b';
						}
					}while(aux2 == 'b');
					
				}while(exit2 == false);
				
				
				
				break;
			case "3":
				System.out.println("Ha seleccionado la opción 3: ");
				algoritmo3();
				
				
			
				break;
				
			case "0":
				salir = true;
				System.out.println("Ha seleccionado salir.\nFin del programa.");
				break;
			
			default: 
				System.out.println("La opción introducida no es válida.\nDebe seleccionar entre las opciones 1, 2, 3 o 0.\n");
		
			}
			
		}
		scan.close();
		
	}

}
